<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Mawruth" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="backgroundColor">@color/white</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Mawruth" parent="Base.Theme.Mawruth" />

    <style name="heroBtn" parent="Widget.AppCompat.ButtonBar">
        <item name="android:background">@drawable/btn_gradient</item>
        <item name="fontFamily">@font/cairo_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="strokeBtn" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="fontFamily">@font/cairo_medium</item>
        <item name="android:textColor">#A17C48</item>
        <item name="android:textSize">18sp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#A17C48</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>

</resources>