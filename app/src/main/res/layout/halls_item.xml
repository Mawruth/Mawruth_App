<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="@dimen/_140sdp"
    android:backgroundTint="@color/white"
    android:layout_margin="@dimen/_5sdp"
    app:cardElevation="@dimen/_11sdp"
    app:strokeWidth="0dp"
    app:cardCornerRadius="@dimen/_8sdp"
    android:padding="@dimen/_8sdp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:layout_margin="@dimen/_11sdp"
            app:cardElevation="@dimen/_50sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"

                app:cardCornerRadius="@dimen/_5sdp"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/hall_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"

                    android:scaleType="centerCrop"
                    android:src="@drawable/museum_pic" />


            </com.google.android.material.card.MaterialCardView>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/hall_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="الأموي و العباسي"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <TextView
            android:id="@+id/hall_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxEms="5"
            android:maxLines="1"

            android:text="القاعة 1"
            android:textColor="#66424242"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintEnd_toEndOf="@+id/hall_name"
            app:layout_constraintTop_toBottomOf="@+id/hall_name" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="@dimen/_21sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/halls_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>